#!/bin/sh

[[ $(command -v $0 >/dev/null) ]] || {
    case "$(uname -s)" in
        Darwin)
            if [ -d /Applications/Sublime\ Text\ 2.app ]; then
                /Applications/Sublime\ Text\ 2.app/Contents/SharedSupport/bin/subl $*
            elif [ -d /Applications/TextMate.app ]; then
                /Applications/TextMate.app/Contents/SharedSupport/Support/bin/mate $*
            fi
            ;;
    esac
}
