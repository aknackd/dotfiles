#!/usr/bin/env bash

#
# Launch GUI text editor from command line
#

case "$(uname -s)" in
    Darwin)
        locations=( ~/Applications /Applications )
        editors=(
            Sublime\ Text.app/Contents/SharedSupport/bin/subl
            Sublime\ Text\ 2.app/Contents/SharedSupport/bin/subl
        )

        for appdir in "${locations[@]}"; do
            for editor in "${editors[@]}"; do
                [[ -f $appdir/$editor ]] && exec "$appdir/$editor" $*
            done
        done
        ;;

    Linux)
        locations=( /usr/bin /usr/local/bin )
        editors=( subl3 )

        for appdir in "${locations[@]}"; do
            for editor in "${editors[@]}"; do
                [[ -f $appdir/$editor ]] && exec "$appdir/$editor" $*
            done
        done
        ;;
esac

